{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "polly": {
    "/api/values": {
      "handle": {
        "order": 1,
        "exceptionType": "System.Exception"
      },
      "metrics": "metrics",
      "latency": {
        "order": "2",
        "timeInMilliseconds": 60000,
        "numberOfBuckets": 12,
        "bucketDataLength": 10
      },
      "CircuitBreaker": {
        "order": 3,
        "exceptionsAllowedBeforeBreaking": 3,
        "durationOfBreakInSeconds": 30
      },
      "Fallback": {
        "order": 4,
        "valueProviderType": "Polly.Web.EventStream.SampleApp.Controllers.ValuesFallbackProvider, Polly.Web.EventStream.SampleApp, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null"
      }
    },
    "/api/values/id": {
      "handle": {
        "order": 1,
        "exceptionType": "System.Exception"
      },
      "metrics": "metrics",
      "latency": {
        "order": "2",
        "timeInMilliseconds": 60000,
        "numberOfBuckets": 12,
        "bucketDataLength": 10
      },
      "timeout": {
        "order": 3,
        "timeoutInSeconds": 10
      },
      "CircuitBreaker": {
        "order": 4,
        "exceptionsAllowedBeforeBreaking": 3,
        "durationOfBreakInSeconds": 30
      },
      "Fallback": {
        "order": 5,
        "value": "value-fallback",
        "valueType": "string"
      }

    }
  }

}
